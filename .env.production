# Production Environment Variables
NODE_ENV=production
PORT=3001

# Database (SQLite for production - you can change to PostgreSQL/MySQL)
DATABASE_PATH=./damac.db

# JWT Secret (change this in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# File Upload Settings
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# CORS Settings (replace with your frontend domain)
FRONTEND_URL=https://ilandpropertiesdashboard.vercel.app

# Backend URL for image links (replace with your production backend URL)
BACKEND_URL=https://damac-backend.onrender.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
